		А1И.А1БК_ПолеВыбораФайла().ДобавитьОписание(МассивОписаний, "КаталогРасширения", "Каталог расширения", А1Э_Структуры.Создать(
		"Режим", "ВыборКаталога",
		));
		А1Э_Формы.ДобавитьОписаниеКомандыИКнопки2(МассивОписаний, "ДобавитьМеханизмы", ИмяМодуля() + ".ДобавитьМеханизмы", "Добавить (обновить) механизмы");
